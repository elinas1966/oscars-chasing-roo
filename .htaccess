# Enable rewrite engine
<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /
  RewriteRule ^index\.html$ - [L]
  RewriteCond %{REQUEST_FILENAME} !-f
  RewriteCond %{REQUEST_FILENAME} !-d
  RewriteCond %{REQUEST_FILENAME} !-l
  RewriteRule . /index.html [L]
</IfModule>

# Set correct MIME types
<IfModule mod_mime.c>
    AddType application/javascript .js
    AddType application/javascript .mjs
    AddType application/javascript .jsx
    AddType application/javascript .ts
    AddType application/javascript .tsx
    AddType text/css .css
    
    # Ensure JavaScript modules are served with correct MIME type
    AddHandler application/javascript .js
    AddHandler application/javascript .mjs
    AddHandler application/javascript .jsx
    AddHandler application/javascript .ts
    AddHandler application/javascript .tsx
    
    # Force JavaScript MIME type
    ForceType application/javascript
</IfModule>

# Enable CORS
<IfModule mod_headers.c>
    Header set Access-Control-Allow-Origin "*"
    Header set X-Content-Type-Options "nosniff"
    
    # Force JavaScript MIME type for specific extensions
    <FilesMatch "\.(js|mjs|jsx|ts|tsx)$">
        Header set Content-Type "application/javascript"
    </FilesMatch>
</IfModule>

# Cache static assets
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
</IfModule>